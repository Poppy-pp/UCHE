            reservetype:'试驾预约',
            favbrand:'',
            favseries:'',
            favmodel:'',
            testdrivedate:'',
            planpurchasedate:'',
            remarks:'',
            aftersaleitem:'',
            licenseplatenum:'',
            totalmiles:'',
            servicemonths:'',
        },
        addLoading:false,
        brandOptions: [{
          value: '宝马4系',
          label: '宝马4系'
        }],
        seriesOptions:[{
            label:'2015款',
            value:'2015款',
        }],
        modelOptions:[{
            label:'敞篷豪华款',
            value:'敞篷豪华款',
        }],
      };
    },
    methods: {
      handleTabsClick(tab, event) {
        if (tab.index == '1') {
            this.addForm.reservetype = '购车预约';
        }else if (tab.index == '2') {
            this.addForm.reservetype = '售后预约';
        }else if (tab.index == '0') {
            this.addForm.reservetype = '试驾预约';
        }
      },
      addSubmit: function () {
                this.$refs.addForm.validate((valid) => {
                    if (valid) {
                      if (this.addForm.custname == '' || this.addForm.mobile == '') {//客户名和客户电话必填
                        this.$message ({
                              message : '请填写完整！',
                              center: true,
                              type: 'error'
                          });
                        return;
                      }
                                this.addLoading = true;
                                let para = {
                                    custname:this.addForm.custname,
                                    mobile:this.addForm.mobile,
                                    reservetype:this.addForm.reservetype,
                                    favbrand:this.addForm.favbrand,
                                    favseries:this.addForm.favseries,
                                    favmodel:this.addForm.favmodel,
                                    testdrivedate:this.addForm.testdrivedate,
                                    planpurchasedate:this.addForm.planpurchasedate,
                                    remarks:this.addForm.remarks,
                                }
                                addAppointment(para).then((res) => {
                                    if (res.data.result.code == 0) {
                                        this.addLoading = false;
                                        this.$message ({
                                            message : '预约成功！',
                                            center: true,
                                            type: 'success'
                                        });
                                        this.$refs['addForm'].resetFields();
                                        this.$router.push({
                                              name: 'appointmentList'
                                        });
                                    }
                                });
                    }else{
                        this.$message ({
                                message : '标红项有误！',
                                center: true,
                                type: 'error'
                        });
                    }
                });
            },
    }
